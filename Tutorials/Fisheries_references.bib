file = {:C\:/Users/kylel/AppData/Local/Mendeley Ltd./Mendeley Desktop/Downloaded/Reichert et al. - 2016 - Consistent scaling of population structure across landscapes despite intraspecific variation in movement and co.pdf:pdf},
issn = {13652656},
journal = {Journal of Animal Ecology},
keywords = {breeding dispersal,conservation prioritization,graph theory,landscape connectivity,natal dispersal,nomadism,patch importance,population connectivity,spatial network},
