issn = {15231739},
journal = {Conservation Biology},
keywords = {Athabasca rainbow trout,an{\'{a}}lisis bayesiano de jerarqu{\'{i}}as,an{\'{a}}lisis de tendencias poblacionales,conservation status thresholds,datos de baja resoluci{\'{o}}n,hierarchical Bayesian analysis,low-resolution data,population trend analysis,trucha arco{\'{i}}ris de Athabasca,umbrales del estado de conservaci{\'{o}}n},
