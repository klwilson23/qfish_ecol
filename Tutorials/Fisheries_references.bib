keywords = {Fisheries,Population dynamics,Spatial ecology,Spatial structure},
month = {apr},
pages = {227--243},
title = {{Theory, consequences and evidence of eroding population spatial structure in harvested marine fishes: a review}},
url = {https://www.int-res.com/abstracts/meps/v480/p227-243/},
