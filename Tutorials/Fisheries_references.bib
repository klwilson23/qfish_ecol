issn = {0027-8424},
journal = {Proceedings of the National Academy of Sciences},
number = {34},
pages = {8591--8596},
title = {{Isolating the roles of movement and reproduction on effective connectivity alters conservation priorities for an endangered bird}},
volume = {115},
year = {2018}
}
