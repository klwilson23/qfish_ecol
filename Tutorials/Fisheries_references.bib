journal = {Proceedings of the Royal Society B: Biological Sciences},
keywords = {Connectivity,Dispersal,Evolutionary trap,Natal habitat preference induction,Snail kite,Spatial network},
month = {sep},
number = {1814},
pmid = {26336178},
publisher = {Royal Society of London},
title = {{Affinity for natal environments by dispersers impacts reproduction and explains geographical structure of a highly mobile bird}},
url = {http://dx.doi.org/10.1098/rspb.2015.1545orviahttp://rspb.royalsocietypublishing.org.},
